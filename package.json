{
  "name": "exoframe-server",
  "version": "5.0.5-dev",
  "description": "Exoframe is a self-hosted tool that allows simple one-command deployments using Docker",
  "main": "bin/server-core.js",
  "bin": "bin/exoframe-server.js",
  "scripts": {
    "start": "node index.js",
    "lint": "eslint src/ test/ bin/exoframe-server.js",
    "test": "NODE_ENV=testing jest --coverage --silent --maxWorkers=2 --ci",
    "coveralls": "cat ./coverage/lcov.info | coveralls",
    "build-bundle": "ncc build src/index.js -o dist",
    "prepare-build": "cp dist/index.js bin/server-core.js && cp dist/runner.js bin/runner.js && cp dist/home.html bin/home.html",
    "build": "yarn build-bundle && yarn prepare-build"
  },
  "files": [
    "bin/exoframe-server.js",
    "bin/server-core.js",
    "bin/assets/home.html",
    "bin/assets/runner.js"
  ],
  "repository": "git@github.com:exoframejs/exoframe-server.git",
  "author": "Tim Ermilov <yamalight@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@zeit/ncc": "^0.20.4",
    "babel-eslint": "^10.0.3",
    "cors": "^2.8.4",
    "coveralls": "^3.0.6",
    "dockerode": "^2.5.6",
    "eslint": "^6.2.2",
    "eslint-config-prettier": "^6.1.0",
    "eslint-config-standard": "^14.1.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-node": "^9.1.0",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "exoframe-faas": "^1.0.1",
    "fastify": "^2.7.1",
    "fastify-auth": "^0.5.0",
    "get-port": "^5.0.0",
    "highland": "^2.13.5",
    "jest": "^24.9.0",
    "js-yaml": "^3.12.0",
    "jsonwebtoken": "^8.3.0",
    "lodash": "^4.17.15",
    "lokijs": "^1.5.7",
    "mkdirp": "^0.5.1",
    "nock": "^10.0.4",
    "node-fetch": "^2.6.0",
    "prettier": "^1.18.2",
    "rimraf": "^3.0.0",
    "semver-compare": "^1.0.0",
    "signale": "^1.3.0",
    "sshpk": "^1.14.2",
    "tar-fs": "^2.0.0",
    "uuid": "^3.3.3"
  },
  "jest": {
    "testEnvironment": "node"
  }
}
