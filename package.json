{
  "name": "exoframe-server",
  "version": "4.1.3-dev",
  "description": "Exoframe is a self-hosted tool that allows simple one-command deployments using Docker",
  "main": "bin/server-core.js",
  "bin": "bin/exoframe-server.js",
  "scripts": {
    "start": "node index.js",
    "test": "NODE_ENV=testing jest --coverage --silent --maxWorkers=2 --ci",
    "coveralls": "cat ./coverage/lcov.info | coveralls",
    "build-bundle": "ncc build src/index.js -o dist",
    "prepare-build": "mv dist/index.js bin/server-core.js && mv dist/home.html bin/home.html",
    "build": "yarn build-bundle && yarn prepare-build && pkg -t node10.4.1-alpine -o exoframe-server ."
  },
  "pkg": {
    "assets": "bin/home.html"
  },
  "files": [
    "bin/exoframe-server.js",
    "bin/server-core.js",
    "bin/home.html"
  ],
  "repository": "git@github.com:exoframejs/exoframe-server.git",
  "author": "Tim Ermilov <yamalight@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@zeit/ncc": "^0.18.5",
    "cors": "^2.8.4",
    "coveralls": "^3.0.2",
    "dockerode": "^2.5.6",
    "exoframe-faas": "^0.1.0",
    "fastify": "^2.4.1",
    "fastify-auth": "^0.5.0",
    "get-port": "^5.0.0",
    "highland": "^2.13.0",
    "jest": "^24.0.0",
    "js-yaml": "^3.12.0",
    "jsonwebtoken": "^8.3.0",
    "lodash": "^4.17.11",
    "lokijs": "^1.5.5",
    "mkdirp": "^0.5.1",
    "nock": "^10.0.4",
    "node-fetch": "^2.6.0",
    "pkg": "^4.3.4",
    "rimraf": "^2.6.2",
    "semver-compare": "^1.0.0",
    "signale": "^1.3.0",
    "sshpk": "^1.14.2",
    "tar-fs": "^2.0.0",
    "uuid": "^3.3.2"
  },
  "jest": {
    "testEnvironment": "node"
  }
}
